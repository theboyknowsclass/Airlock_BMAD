# Airlock Environment Variables Template
# Copy this file to .env.prod or .env.dev and fill in appropriate values

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=airlock
POSTGRES_USER=airlock_user
POSTGRES_PASSWORD=change_me_in_production

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=airlock
RABBITMQ_PASSWORD=change_me_in_production
RABBITMQ_MANAGEMENT_PORT=15672

# API Gateway
API_GATEWAY_PORT=8000

# Authentication
ADFS_CLIENT_ID=your_adfs_client_id
ADFS_CLIENT_SECRET=your_adfs_client_secret
ADFS_AUTHORITY=https://your-adfs-server/adfs
ADFS_REDIRECT_URI=http://localhost:8000/auth/callback
JWT_SECRET_KEY=change_me_to_secure_random_key_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRY_MINUTES=15
REFRESH_TOKEN_EXPIRY_DAYS=7

# Service URLs (for service-to-service communication)
AUTH_SERVICE_URL=http://auth-service:8001
USER_SERVICE_URL=http://user-service:8002
API_KEY_SERVICE_URL=http://api-key-service:8003
SUBMISSION_SERVICE_URL=http://submission-service:8004
WORKFLOW_SERVICE_URL=http://workflow-service:8005
STORAGE_SERVICE_URL=http://storage-service:8006
REGISTRY_SERVICE_URL=http://registry-service:8007
TRACKING_SERVICE_URL=http://tracking-service:8008

# Frontend
FRONTEND_PORT=3000
VITE_API_BASE_URL=http://localhost:8000/api/v1

# Development Only
MOCK_OAUTH_ENABLED=true
MOCK_OAUTH_PORT=9000

# Logging
LOG_LEVEL=INFO
