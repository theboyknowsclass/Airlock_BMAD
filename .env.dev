# Airlock Development Environment Variables
# This file contains all environment variables for development
# Dev-only variables are marked with comments

# ============================================================================
# Database Configuration
# ============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=airlock_dev
POSTGRES_USER=airlock_dev
POSTGRES_PASSWORD=dev_password_change_me

# ============================================================================
# RabbitMQ Configuration
# ============================================================================
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=airlock_dev
RABBITMQ_PASSWORD=dev_password_change_me

# Development Only: Expose RabbitMQ Management UI
RABBITMQ_MANAGEMENT_PORT=15672

# ============================================================================
# API Gateway
# ============================================================================
API_GATEWAY_PORT=8000

# ============================================================================
# Authentication
# ============================================================================
# Development: Using mock OAuth service
ADFS_CLIENT_ID=mock_client_id
ADFS_CLIENT_SECRET=mock_client_secret
ADFS_AUTHORITY=http://mock-oauth:9000
ADFS_REDIRECT_URI=http://localhost:8000/auth/callback
JWT_SECRET_KEY=dev_secret_key_change_me_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRY_MINUTES=15
REFRESH_TOKEN_EXPIRY_DAYS=7

# ============================================================================
# Service URLs (for service-to-service communication)
# ============================================================================
AUTH_SERVICE_URL=http://auth-service:8000
USER_SERVICE_URL=http://user-service:8000
API_KEY_SERVICE_URL=http://api-key-service:8000
SUBMISSION_SERVICE_URL=http://submission-service:8000
WORKFLOW_SERVICE_URL=http://workflow-service:8000
STORAGE_SERVICE_URL=http://storage-service:8000
REGISTRY_SERVICE_URL=http://registry-service:8000
TRACKING_SERVICE_URL=http://tracking-service:8000

# ============================================================================
# Frontend
# ============================================================================
FRONTEND_PORT=3000
VITE_API_BASE_URL=http://localhost:8000/api/v1

# ============================================================================
# Development Only Variables
# ============================================================================
# Mock OAuth Service (development only - not used in production)
MOCK_OAUTH_ENABLED=true
MOCK_OAUTH_PORT=9000

# pgAdmin Database Management Tool (development only - not used in production)
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@airlock.dev
PGADMIN_PASSWORD=admin

# ============================================================================
# Logging
# ============================================================================
# Development: Use DEBUG level for detailed logging
LOG_LEVEL=DEBUG
